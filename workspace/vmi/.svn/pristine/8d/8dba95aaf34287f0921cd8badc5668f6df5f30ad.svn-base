Ext.define("DJ.tools.grid.MySimpleGridMixer", {

	/**
	 * 
	 * @param {} ids,没有前缀的id
	 */
	_hideButtons : function(ids) {

		var me = this;

		Ext.each(ids, function(ele) {

			Ext.getCmp(me.id + '.' + ele).hide();

		});

	},
	
	//2016-3-19   点击三月前数据,配置grid界面按钮不可用
	_hideExcuteButtons : function(cmps,disablebuttons,queryHistory){
		if(queryHistory){
			var gridID = "";
			if(cmps.length>0){
				gridID = cmps[0].up('grid').id;
			}
			Ext.each(cmps, function(cmp) {
				var disabled = false;
				if(cmp.xtype=="button"){
					Ext.each(disablebuttons, function(item) {
						if(cmp.id == gridID+"."+item){
							disabled = true;
							return;
						}
					});	
					if(disabled){
						//cmp.disabled = true;
						cmp.disable();
					}
				}
			});			
		}
		else{
			Ext.each(cmps, function(cmp) {
				if(cmp.xtype=="button"){			
					//cmp.disabled = false;
					cmp.enable();
				}
			});	
		}
		
	},
	
