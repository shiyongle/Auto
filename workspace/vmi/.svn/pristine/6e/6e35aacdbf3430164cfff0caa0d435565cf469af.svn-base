/*
 * GridFilters Styles
 */

.ux-filtered-column {
    font-style: italic;
    font-weight: bold;
}

.ux-gridfilter-text-icon {
    background-image: url(../images/find.png) !important;
}
/* 上一页下一页箭头 */
.updown-sign{
	position: absolute;
	font-family: sans-serif;
	font-size: 2em;
	color: white;
	font-weight: bold;
	cursor: pointer;
	line-height: 1em;
	width:30px;
	background-color:#000;
	opacity:0.3;
	text-align:center;
	border-radius:3px;
	user-select:none;
	-webkit-user-select:none;
	-moz-user-select:none;
}
/* selectbox的样式 */
.selectbox-over{
    background-color:#ddd;
    cursor:pointer;
}
.selectbox-select{
    background-color: rgb(210,250,250);
    border: solid 2px #f00!important;
}
.selectbox-select2{
    background-color: rgb(210,250,250);
    border: solid 1px #f00!important;
}