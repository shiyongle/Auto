@charset "utf-8";
.forgetMain{
	margin-top:50px;
	margin-bottom:100px;
	padding:100px 0;
}
.main_in{
	margin:50px auto;
}
/*大于768px*/
@media screen and (min-width: 769px) {
	/*标题*/
	.reg_title
	{
		font-size: 20px!important;
	}
}
/*小于768px*/
@media screen and (max-width: 769px) {
	/*标题*/
	.reg_title
	{
		font-size: 18px!important;
	}
}
/*小于455px，大于329px*/
@media (min-width: 329px) and (max-width: 455px) {}
/*小于330px*/
@media screen and (max-width: 330px) {}
/*背景颜色*/
.reg_bg
{
	background-color: #fff;
	margin: 2% auto;
	overflow:hidden;
}
/*表单样式*/
.form-register
{
	border: none !important;
	border: 1px solid #fff !important;
	border-radius: 0px !important;
	border-bottom: 1px solid #e9ecee !important;
	box-shadow: inset 0 1px 1px #fff !important;
	outline: #fff !important;
	padding: 0 35px !important;
	
}
.form-register:focus {
	
    border: none;
	border: 1px solid #fff;
	border-radius: 0px;
	border-bottom: 1px solid #e6454a;
	box-shadow: inset 0 1px 1px #fff;
	outline: #fff;
    box-shadow:none;
}
/*标题颜色*/
.reg_title
{
	color: #5c6068!important;
}
/*手机图片*/
.phone_img
{
	background-image: url(images/reg/phone.png)!important;
	background-repeat: no-repeat;
	background-position: 0 4px;
}
/*验证码*/
.information_img
{
	background-image: url(images/reg/information.png)!important;
	background-repeat: no-repeat;
	background-position: 0 7px;
}
/*获取验证码*/
#obtain
{
	cursor: pointer;
	display: block;
	position: absolute;
	top: 0;
	right: 15px;
	background-color: #f0f2f5;
	color: #e6454a;
	padding: 5px 12px;
	border-radius: 4px;
}
/*修改btn颜色*/
.btn-danger
{
	background-color: #e6454a;
	margin-top: 5%;
}
.tooltip-hide
{
	color: #000;
}
/*锁图片*/
.key_img
{
	background-image: url(images/reg/password_1.png) !important;
	background-repeat: no-repeat;
	background-position: 0 4px;
}

/*表单验证提示*/
/*验证手机页*/
.myform{
	position:relative;
}
#mobile_err,#mobile2_err,#information_err{
	position:absolute;
	top:15px;
	left:20px;
}
/*设置新密码页*/
#password0_err,#password0_err2,#password1_err,#password2_err,#password1_err2,#password2_err2{
	position:absolute;
	top:15px;
	left:20px;
}