<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ include file="/pages/pcWeb/common/taglibs.jsp"%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width">
<meta name="format-detection" content="telephone=no,email=no,adress=no"/>
<title>一路好运--赚钱省钱，一路好运</title>
<link href="${ctx}/pages/pcWeb/css/bootstrap.min.css" rel="stylesheet"/>
<link href="${ctx}/pages/pcWeb/css/login.css" rel="stylesheet"/>
<script type="text/javascript" src="${ctx}/pages/pcWeb/js/jquery-1.12.3.min.js"></script>
<script type="text/javascript" src="${ctx}/pages/pcWeb/js/bootstrap.min.js" ></script>
<script type="text/javascript" src="${ctx}/pages/pcWeb/js/login.js"></script>
</head>
<body>
	
	<div id="banner">

			<div class="banner_in" id="banner01">
				<img src="${ctx}/pages/pcWeb/css/images/login/car.png"/>
			</div>
			<div class="container login">	
						<img class="img-responsive word" src="${ctx}/pages/pcWeb/css/images/login/word.png" style="margin:auto;"/>

					<div class="row btn-all">
						<div class="col-xs-6 col-md-3 col-md-offset-3">
							<a class="btn btn-danger btn-default btn-block btn-login" id="login-btn">登录</a>
						</div>
						<div class="col-xs-6 col-md-3">
							<a class="btn btn-default btn-block btn-regist">注册</a>
						</div>
						
					</div>
			</div>
		<div id="banner_bg">
		</div>
	</div>
	
	<!-- 登录框大小 -->
	<div id="lk_login">
		<!-- 关闭键 -->
		<div class="login-close">
			<img src="${ctx}/pages/pcWeb/css/images/login/close.png">
		</div>
		<!-- 登录界面 -->
		<div class="lk_next_login">
			<h1>登录智能服务平台</h1>
			<!-- 表单 -->
			<label>
				<input type="text" id="lk_input_user" name="logonId" tabindex="1" value="" autocomplete="off" maxlength="50" placeholder="请输入用户名/邮箱/手机">	
			</label>
			<label>
				<input style="margin-top:10px;" type="password" id="lk_input_lock" name="passId" tabindex="2" value="" autocomplete="off" maxlength="50" placeholder="请输入密码">
			</label>
			<div class="lk_forget left" >
				<a href="" style="color:#e6454a"><p>免费注册</p></a>
			</div>
			<!-- 忘记密码？ -->
			<div class="lk_forget right">
				<a href=""><p>忘记登录密码？</p></a>
			</div>
			<!-- 登录按钮 -->
			<div class="lk_login_btn">
				登录
			</div>
		</div>
		<!-- 扫二维码界面 -->
		<div class="lk_code_login" style="display:none">
			<h1 style="margin-top: 10px;">扫码登录</h1>
			<div class="lk_code">
				<!-- 二维码位置 -->
				<div>二维码</div>
				<!-- 二维码失效 -->
				<div class="lk_code_failure" style="display:none">
					<p>二维码失效</p>
					<a href="">刷新</a>
				</div>
				<!-- 二维码出错 -->
				<div class="lk_code_error" style="display:none">
					<p>二维码出错</p>
					<a href="">重扫</a>
				</div>
				<!-- 二维码扫码成功 -->
				<div class="lk_code_good" style="display:none" >
					<img src="${ctx}/pages/pcWeb/css/images/login/CheckMark.png" width="50"/>
					<a>扫码成功</a>
				</div>
			</div>
			<!-- 帮助图片 -->
			<div class="lk_help_pic" style="display:none">
			</div>
			<div>

			</div>
			<div class="lk_loginText">
				<p>请用手机软件扫码</p>
				<p>
					<a href="" id="lk_help">使用帮助</a>
					<em>丨</em>
					<a href="">下载手机APP</a>
				</p>
			</div>
		</div>
		<!-- 右上角切换 -->
		<div id="lk_switch">
			<!--空div-->
		</div>
	</div>
</body>
</html>

