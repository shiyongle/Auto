.wallet_card{
	background: #fff;
	overflow: hidden;
	padding: 20px 0;
	color: #999999;
	min-height:500px;
}

.wallet_card ul{
	list-style: none;
}
.wallet_card ul li{
	float: left;
	width: 230px;
	height: 165px;
	border: 1px solid #D4D4D4;
	padding: 5px;
	margin-right: 10px;
	margin-bottom: 20px;
	overflow:hidden;
}


.line1 span{
	color: #333;
}

.line2{
	margin-top: 20px;
}
.line{
	margin-bottom: 20px;
}

.add{
	position: relative;
	cursor:pointer;
}
.add_img{
	width: 100%;
	height: 100%;
	text-align: center;
	line-height: 200px;
	background: url(images/wallet/add.png) no-repeat;
	background-position: 49% 50px;
}


@media only screen and (max-width:550px ) {
.container ul li{
	float: left;
	width: 100%;
	height: 165px;
	border: 1px solid #D4D4D4;
	padding: 5px;
	margin-right: 10px;
	margin-bottom: 20px;
}
.add_img{
	width: 100%;
	height: 100%;
	text-align: center;
	line-height: 200px;
	background: url(images/wallet/add.png) no-repeat;
	background-position: 49% 50px;
}
}





#colse{
	cursor: pointer;
}
.del{
	width: 500px;
	overflow:hidden;
	display: none;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	-webkit-transform: translate(-50%,-50%);
	background: url(images/wallet/del_bg.png);
	z-index:999999;
}
@media only screen and (max-width:480px ) {
.del{
	width: 300px;
}
}
@media only screen and (min-width: 480px) and (max-width: 640px) {
.del{
	width: 500px;
	}
}
.del_in{
	width: 96%;
	height: 96%;
	margin: 1.5% auto;
	background: #fff;
}

.del_tit{
	width: 100%;
	margin: 0 auto;
	font-size: 18px;
	color: #5c6068 !important;
	padding: 10px 0;
	border-bottom: 1px solid #ddd;
}
.reson{
	padding: 10px 0;
	width: 96%;
	height: 96%;
	margin: 1.5% auto;
}
.reson div{
	margin: 15px 0;
}
.btn-a{
	width: 100%;
}



#cardList a{
	cursor:pointer;
}
