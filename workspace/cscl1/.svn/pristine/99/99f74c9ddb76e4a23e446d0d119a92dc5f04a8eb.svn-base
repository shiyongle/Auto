@charset "utf-8";
.main{
	margin:100px auto;
}
/*步骤*/
.step{
	text-align: center; 
	position:absolute; 
	left: 50%;
	transform:translateX(-50%);
	-ms-transform:translateX(-50%); /* IE 9 */
	-moz-transform:translateX(-50%); /* Firefox */
	-webkit-transform:translateX(-50%); /* Safari 和 Chrome */
	-o-transform:translateX(-50%); /* Opera */
}
.step1_img,.step2_img,.step3_img{
	color: #ffffff; 
	width:40px ;
	height: 40px;
	text-align: center;
	line-height: 40px;
	background: url(images/register_iden/square.png); 
	}

.step_txt_red{
	color:#e6454a;
}

.red_border{
	height: 4px;
	width: 100%;
	background: #e6454a;
	position:relative;
	top: 33.333%;
}

.row{
	margin:30px 0px;
}
/*成功提示及登录*/
.register_iden{
	background-color:#FFFFFF;
	width:100%;
	height:360px;
	margin:30px auto;
	overflow:hidden;
}
.register_iden .row{
	margin-top:110px;
}
.success_img{
	text-align:right;
}

.success_button p{
	font-size:18px;
	line-height:53px;
}
.success_button a{
	color:#fff !important;
	background-color:#E6454A;
	display:inline-block;
	border-radius:7%;
	padding:10px 37px;
}
.success_button a:hover{
	color:#fff !important;
	text-decoration:none;
}
@media screen and (max-width: 768px) {
	.success_button p{font-size:14px;}
	.success_button a{font-size:12px;padding:8px 30px;}
}