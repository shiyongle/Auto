.bg{
	background-color:#4C4C4C;
	color:#ffffff;
	font-size:16px;
}
/*一路好运logo*/
.logo1,.logo2{
	text-align:center;
}
.logo1{
	font-size:40px;
}
.logo2{
	font-size:14px;
	line-height:0;
	transform: translateX(40px);
	-webkit-transform: translateX(40px);
}

/*联系方法*/
.contact_phone,.contact_email{
	text-align:center;
	margin:10px auto;
}
.contact_phone_img,.contact_phone_text,.contact_email_img,.contact_email_text{
	display:inline-block;
}
.contact_phone_img img,.contact_email_img img{
	margin-top:-25px;
}
.contact_phone_text p,.contact_email_text p{
	line-height:12px;
	text-align:left;
}
.contact_email_text p{
	letter-spacing:1px;
}

/*二维码*/
.QR{
	text-align:center;
	margin-bottom: 15px;
}
.QR p{
	font-size:24px;
	font-weight:500;
	
}

/*版权*/
.copyright{
	text-align:center;
	font-size:20px;
	color:#8E8E8E;
}

/*适应手机*/
@media only screen and (min-width: 992px) {
	.logo_div{margin-top:80px;}
	.QR{margin:25px auto;}
	.contact{margin-top:55px;}
}
@media only screen and (max-width: 992px) {
	.logo_div{margin-bottom: 20px;}
}
@media only screen and (max-width: 480px) {
	.contact img{width:35px;}
	.contact p{font-size:12px;}
	.QR p{font-size:12px;}
	.QR img{width:100px;}
	.copyright{font-size:9px;}
}
@media only screen and (min-width: 480px) and (max-width: 768px) {
	.contact img{width:38px;}
	.contact p{font-size:14px;}
	.QR p{font-size:14px;}
	.QR img{width:120px;}
	.copyright{font-size:14px;}
}