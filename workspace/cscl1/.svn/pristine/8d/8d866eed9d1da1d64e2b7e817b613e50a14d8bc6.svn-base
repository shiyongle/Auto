@charset "utf-8";
*{
	font-family: "微软雅黑";
}
.main{
	background: #fff;
	overflow: hidden;
	padding: 50px 0px;
	margin:100px auto;	
}

.ourway img{
	width: 100%;
	margin-top: 75px;
}
/*登录*/
#login{
	width: 300px;
	height:325px;	
	border: 1px solid #dddddd;
	overflow: hidden;	
}
@media only screen and (min-width: 100px) and (max-width: 768px) {
	body{overflow-x:hidden}
	.ourway img{
		width: 100%;
		margin:10px 0;
		}
	#login{
		float:none;
		margin:0 auto;
		}
	.main{
		margin:0;
	}
}


.line{
	width: 99%;
	overflow: hidden;
	margin: 10px auto !important;
}


/*二维码切换*/
.login_change{
	width: 59px;
	height: 59px;
	overflow: hidden;
	float: right;
	cursor: pointer;
}

/*输入框图片*/
.user_img{background:url(images/register_iden/user.png) no-repeat 2px !important}
.pass_img{background:url(images/register_iden/lock.png) no-repeat 2px !important}

/*登录按钮*/
.btn-login{
	width: 100%;
	height: 40px;
	font-size: 16px;
	margin-top: 30px;
}


/*扫一扫*/
.sys{
	margin-bottom: -18px;
}
.line_bottom{
	margin-bottom: 20px;
}



/*验证信息提示*/
#user_err,#pass_err{
	position: relative;
	top:-18px;
	left:20px;
}
