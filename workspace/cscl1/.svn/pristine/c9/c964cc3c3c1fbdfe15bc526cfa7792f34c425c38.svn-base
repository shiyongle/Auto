.wallet_epay{
	background: #fff;
	overflow: hidden;
	padding: 0;
}
.main{
	padding: 10px;
	overflow: hidden;
}

.title{
	font-size: 18px;
	line-height: 36px;
	border-bottom: 1px solid #ddd;
}
.main div{
	margin-bottom: 10px;
	overflow: hidden;
}
.main ul{
	list-style: none;
}
.main ul li{
	width: 148px;
	height: 38px;
	line-height: 35px;
	border: 1px solid #ddd;
	float: left;
	margin-right: 10px;
	margin-bottom: 20px;
	text-align: center;
	cursor: pointer;
}
.main ul li img{
	width: 106px;
	height: 22px;
	vertical-align: middle;
}
.main ul li.more{
	background: #ddd;
	color: #e6454a;
}


/*É¾³ý*/
#colse{
	cursor: pointer;
}
.del{
	width: 500px;
	height: 210px;
	/*display: none;*/
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	-webkit-transform: translate(-50%,-50%);
	background: url(images/wallet/del_bg.png);
}
@media only screen and (max-width:480px ) {
.del{
	width: 300px;
}
.btn-a{
	width: 100% !important;
}
}
@media only screen and (min-width: 480px) and (max-width: 640px) {
.del{
	width: 500px;
	}
}
.del_in{
	width: 96%;
	height: 96%;
	margin: 1.2% auto;
	background: #fff;
}

.del_tit{
	width: 100%;
	margin: 0 auto;
	font-size: 18px;
	color: #5c6068 !important;
	padding: 10px 0;
	border-bottom: 1px solid #ddd;
}
.reson{
	padding: 10px;
	color: #999;
}
.reson div{
	margin: 15px 0;
}
.btn-a{
	width: 150px;
}

.btn-default{
	background: #EEEEEE;
	width: 49%;
}
