<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CL_Addto">

    <resultMap id="CLAddtoMap" type="com.pc.model.CL_Addto">
        <result property="fid" column="fid"/>
        <result property="forderId" column="forder_id"/>
        <result property="fcreatTime" column="fcreat_time"/>
         <result property="fcost" column="fcost"/>
        <result property="fpayMethod" column="fpay_method"/>
        <result property="fabnormityId" column="fabnormity_id"/>
        <result property="fcreateor" column="fcreateor"/>
        <result property="number" column="number"/>
        <result property="fstatus" column="fstatus"/>
        <result property="fdriverfee" column="fdriverfee"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[ad.fid ,ad.forder_id ,ad.fcreat_time, ad.fcost,ad.fpay_method,ad.fabnormity_id,ad.fstatus,ad.fcreateor,ad.number,ad.fdriverfee]]>
	</sql>
	<sql id="columns1">
	    <![CDATA[ad.fid ,ad.forder_id ,ad.fcreat_time, ad.fcost,ad.fpay_method,ad.fabnormity_id,ad.fstatus,ad.fcreateor,ad.number,ad.fdriverfee]]>
	</sql>
	
		<sql id="columns2">
	    <![CDATA[	fid ,forder_id ,fcreat_time, fcost,fpay_method,fabnormity_id,fcreateor,fremark ,number,fstatus,fdriverfee]]>
	</sql>
	
    <insert id="insert" useGeneratedKeys="true" keyProperty="fid" >
    <![CDATA[
        INSERT INTO cl_addto (
        	fid ,forder_id ,fcreat_time, fcost,fpay_method,fabnormity_id,fcreateor,fremark ,number,fstatus,fdriverfee
        )VALUES(
        	#{fid, jdbcType=INTEGER} ,
        	#{forderId, jdbcType=INTEGER} ,
        	#{fcreatTime, jdbcType=TIMESTAMP} ,
        	#{fcost, jdbcType=DECIMAL} ,
        	#{fpayMethod, jdbcType=INTEGER} ,
        	#{fabnormityId, jdbcType=INTEGER} ,
        	#{fcreateor, jdbcType=INTEGER} ,
        	#{fremark, jdbcType=VARCHAR} ,
        	#{number,jdbcType=VARCHAR},
        	#{fstatus,jdbcType=INTEGER},
        	#{fdriverfee, jdbcType=DECIMAL} 
        	
        )
    ]]>
    </insert>

    <update id="updateDriverfee" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fdriverfee=#{fdriverfee,jdbcType=DECIMAL}
        WHERE 
	        fid = #{id} 
    ]]>
    </update>
    <update id="update" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fstatus=#{fstatus,jdbcType=INTEGER},
        	 forder_id=#{forderId, jdbcType=INTEGER} ,
        	 fcreat_time= #{fcreatTime, jdbcType=TIMESTAMP} ,
        	 fcost= #{fcost, jdbcType=DECIMAL} ,
        	 fpay_method=#{fpayMethod, jdbcType=INTEGER} ,
	         fabnormity_id= #{fabnormityId, jdbcType=INTEGER} ,
	         fcreateor=#{fcreateor, jdbcType=INTEGER} ,
	         number=#{number,jdbcType=VARCHAR},
	         fdriverfee=#{fdriverfee, jdbcType=DECIMAL} 
        WHERE 
	        fid = #{fid} 
    ]]>
    </update>
    
     <update id="updateByNumber" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fstatus=#{fstatus,jdbcType=INTEGER}
        WHERE 
	        number=#{number}
    ]]>
    </update>
    
     <update id="updateByNumberApp" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fcost= #{fcost, jdbcType=DECIMAL} ,
        	 fpay_method=#{fpayMethod, jdbcType=INTEGER} ,
        	 fstatus=#{fstatus,jdbcType=INTEGER}
        WHERE 
	        number=#{number}
    ]]>
    </update>
    
       <update id="updateByIdApp" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fcost= #{fcost, jdbcType=DECIMAL} ,
        	 fpay_method=#{fpayMethod, jdbcType=INTEGER} ,
        	 fstatus=#{fstatus,jdbcType=INTEGER}
        WHERE 
	       fid = #{id} 
    ]]>
    </update>
    
       <update id="updateById" >
    <![CDATA[
        UPDATE cl_addto SET
        	 fstatus=#{fstatus,jdbcType=INTEGER}
        WHERE 
	       fid = #{id} 
    ]]>
    </update>
    
        <update id="updateStatusByFidAndTask"  >
		<![CDATA[	
			 UPDATE cl_addto SET
			 fstatus=#{fstatus,jdbcType=INTEGER}		
			 WHERE fid = #{fid} and fstatus=0
	    ]]>
    </update>
    
      <select id="getByNumber"  resultMap="CLAddtoMap">
       SELECT <include refid="columns2"></include>
      <![CDATA[
          FROM cl_addto WHERE number=#{payNumber}
      ]]>
      </select>
      
         <select id="getByOrderId"  resultMap="CLAddtoMap">
       SELECT <include refid="columns2"></include>
      <![CDATA[
          FROM cl_addto WHERE forder_id=#{forderId} and  fstatus=1
      ]]>
      </select>
      
          <select id="getByNowTime" resultMap="CLAddtoMap">
    	SELECT <include refid= "columns" />
    	 <![CDATA[
    	 FROM cl_addto ad INNER JOIN(
			SELECT MAX(number) as number FROM cl_addto WHERE DATE_FORMAT(fcreat_time  ,'%Y-%m-%d')=DATE_FORMAT(#{nowTime},'%Y-%m-%d') 
		) ad on ad.number = ad.number
		]]>
    </select>
    
   <select id="getNonPayment" resultMap="CLAddtoMap">
   	<![CDATA[
	    SELECT * FROM cl_addto WHERE fstatus=0 
    ]]>
    </select>
    
   <select id="getNonPaymentByOrderID" resultMap="CLAddtoMap">
   	<![CDATA[
	    SELECT * FROM cl_addto WHERE fstatus=0 and forder_id = #{forderId} order by fcreat_time desc 
    ]]>
    </select>

    <delete id="delete">
    <![CDATA[
        DELETE FROM cl_addto WHERE  fid = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="CLAddtoMap">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM cl_addto ad WHERE  ad.fid = #{id} 
	    ]]>
    </select>
    
    <sql id="findWhere">
	    <where>
			<if test="@Ognl@isNotEmpty(searchKey)">
			    AND (
			        name       LIKE CONCAT('%',#{searchKey},'%') 
			    )
			</if>
	    </where>
	</sql>
	
	<select id="getPriceByOrderid" resultType="long">
		SELECT SUM(fcost) FROM cl_addto WHERE forder_id = #{orderid}
	</select>
    
    <!-- 求满足条件的记录数 --> 
   	<select id="findPageCount" resultType="long">
        SELECT count(*) FROM cl_addto <include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="CLAddtoMap">
    	SELECT <include refid="columns"/> FROM cl_addto 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	<!-- 查询记录树 -->
	<select id="find" resultMap="CLAddtoMap">
	    SELECT <include refid="columns"/> FROM cl_addto 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

