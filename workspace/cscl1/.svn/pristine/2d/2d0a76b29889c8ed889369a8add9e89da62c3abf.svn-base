@charset "utf-8";
/*步骤*/
.step{
	text-align: center; 
	position:absolute; 
	left: 50%;
	transform: translateX(-50%);
	-webkit-transform: translateX(-50%);
	}
.step1_img,.step2_img,.step3_img{
	color: #ffffff; 
	width:40px ;
	height: 40px;
	text-align: center;
	line-height: 40px;
	}
.step1_img{
	background: url(images/register_iden/square.png); 
}
.step2_img{
	background: url(images/register_iden/square_gray.png); 
}
.step3_img{
	background: url(images/register_iden/square_gray.png); 
}
.step_txt_red{color:#e6454a;}
.step_txt_gray{color:#999999;}

.gray_border{
	height: 4px;
	width: 100%;
	background: #dddddd;
	position:relative;
	top: 33.333%;
}

.row{
	margin:30px 0px ;
}
/*注册*/
.register_mian{
	background: #fff;
	overflow: hidden;
	margin-bottom:100px;
}

/*表单*/

.user_img{background:url(images/register_iden/user.png) no-repeat 2px !important}
.information_img{background:url(images/register_iden/information.png) no-repeat 2px !important}
.lock_img{background:url(images/register_iden/lock.png) no-repeat 2px !important}

/*验证提示样式*/
.form_warp{position: relative;}
#tel_err,#tel_err1,#information_err,#information_err1,#password_err,#agree_err{
	position: absolute;
	top:0px;
	left: 50px;
}

/*获取验证码*/
#obtain
{
	cursor: pointer;
	display: block;
	position: absolute;
	top: 0;
	right:0;
	background-color: #f0f2f5;
	color: #e6454a;
	padding: 5px 12px;
	border-radius: 4px;
}

.role_img{
	width: 80px;
	height: 80px;
	cursor: pointer;
}

.fuxy{
	margin: 0 10px;
	vertical-align:sub;
}

/*下一步*/
.nextBtn{
	width: 100%;
	height: 40px;
	color: #fff !important;
	line-height: 25px;
}
.nextBtn:hover{
	color: #fff !important;
}
@media only screen and (min-width: 100px) and (max-width: 768px) {
	body{overflow-x:hidden;}	
}