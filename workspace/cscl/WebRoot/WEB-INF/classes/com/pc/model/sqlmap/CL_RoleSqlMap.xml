<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CL_Role">

    <resultMap id="CLRoleMap" type="com.pc.model.CL_Role">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[id ,name  ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO CL_Role (
        	id ,name
        )VALUES(
        	#{id, jdbcType=INTEGER} ,
        	#{name, jdbcType=VARCHAR} 
        )
    ]]>
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE CL_Role SET
	        name = #{name, jdbcType=VARCHAR} 
        WHERE 
	        id = #{id} 
    ]]>
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM CL_Role WHERE  id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="CLRoleMap">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM CL_Role WHERE  id = #{id} 
	    ]]>
    </select>
    
    <sql id="findWhere">
	    <where>
		   	<if test="@Ognl@isNotEmpty(id)">
			    AND id = #{id}
			</if>
            <if test="@Ognl@isNotEmpty(name)">
                AND name = #{name}
            </if>
			<if test="@Ognl@isNotEmpty(searchKey)">
			    AND (
			        name       LIKE CONCAT('%',#{searchKey},'%') 
			    )
			</if>
	    </where>
	</sql>
    
    <!-- 求满足条件的记录数 --> 
   	<select id="findPageCount" resultType="long">
        SELECT count(*) FROM CL_Role <include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="CLRoleMap">
    	SELECT <include refid="columns"/> FROM CL_Role 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	<!-- 查询记录树 -->
	<select id="find" resultMap="CLRoleMap">
	    SELECT <include refid="columns"/> FROM CL_Role 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

