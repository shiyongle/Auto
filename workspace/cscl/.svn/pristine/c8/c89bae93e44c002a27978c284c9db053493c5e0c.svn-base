body
{
	background-color: #f0f2f5;
}
/*轮播图大小*/
.item img
{
	width: 100%;
}
/*大于1920px*/
@media screen and (min-width: 1919px) {
	/*标题*/
	.img-title
	{

		top: 8%;
		right: 20%!important;
	}
	.img-title
	{
		width: 500px!important;
		height: 800px!important;

	}
	.img-title img.img-responsive
	{
		width: 500px!important;
		
	}
	.img_down li img
	{
		width: 169px!important;
		height: 63px!important;
		margin-top: 25px!important;
	}
	.img-erwei img
	{
		width: 170px!important;
		height: 170px!important;
		margin-top:15px !important;
		margin-left:80px !important;
	}
	.pic-text
	{
		font-size: 22px!important;
	}

}
/*大于768*/
@media (min-width: 768px) and (max-width: 1919px) {
	/*二维码*/
	.img-title
	{
		top:8% !important;
		right: 13% !important;	
	};
	.img-title
	{
		width:377px !important;
	}
	.img-erwei img
	{
		width:100px !important;
		margin-top:15px !important;
		margin-left:80px !important;
	}
	.pic-text
	{
		font-size: 18px!important;
	}
}
/*小于1000px*/
@media screen and (max-width: 1000px) {
	.img-title{
	display:none;
	}
}
/*小于768px*/
@media screen and (max-width: 769px) {	
	/*标题*/
	.carousel-indicators
	{
		bottom: 0px!important;
	}
	.img_down
	{
		display: none !important;
	}
	.img-title
	{
		top: 5% !important;
		right: 8% !important;
	}
	.img-erwei img
	{
		width:100px !important;
		margin-top:7px !important;
		margin-left:50px !important;
	}
	.img-title
	{
		width: 200px !important;
	}
	.pic-text
	{
		font-size: 16px!important;
	}
}
/*小于455px*/
@media screen and (max-width: 455px) {
	body{overflow-x:hidden}
	.carousel-indicators
	{
		bottom: -12px!important;
	}

	.img-title
	{
		width: 150px !important;
	}
	.img-erwei img
	{
		width:55px !important;
		margin-top:10px !important;
		margin-left:50px !important;
	}
	.oh
	{
		margin-top: 0px!important;
	}
	.pic img
	{
		width: 150px!important;
	}
	.pic-text
	{
		font-size: 12px;
	}
}

/*4保障*/
.icon-title
{
	display: block;
	text-align: center;
}
.icon-title div
{
	margin-top: 3%;
}
.click_tiaozhuan{
	cursor:pointer;
}
/*二维码下载*/
.img-title
{
	position: absolute;
	top: 8%;
	right: 5%;
}
.img_down
{
	list-style: none;
	float: left;
	
}
.img-erwei
{
	display: -webkit-box;
}

.img_down li img 
{
	width: 100px;
	margin-top: 18px;
	cursor: pointer;
}

/*背景*/
.container-bg
{
	background-color: #fff;
	margin-top: 2%;
}
.pic
{
	display: block;
	text-align: center;
	padding: 4% 0%;
}
.pic-title,.pic-text
{
	text-align: center;
	color: #5c6068;
}
.oh
{
	margin-top: 100px;
	color: #5c6068;
}
.pic-img
{
	display: block;
	text-align: center;
	margin-bottom: 3%;
}