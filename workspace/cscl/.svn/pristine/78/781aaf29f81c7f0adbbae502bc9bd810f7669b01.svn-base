<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CL_Abnormity">

    <resultMap id="CLAbnormity" type="com.pc.model.CL_Abnormity">
        <result property="fid" column="fid"/>
        <result property="fcreatTime" column="fcreat_time"/>
        <result property="ftakeproblem" column="ftakeproblem"/>
         <result property="fcarproblem" column="fcarproblem"/>
        <result property="frecproblem" column="frecproblem"/>
        <result property="fremark" column="fremark"/>
        <result property="forderId" column="forder_id"/>
        <result property="fcreateor" column="fcreateor"/>
        <result property="number" column="number"/>
        
        
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[fid ,fcreat_time ,ftakeproblem, fcarproblem,frecproblem,fremark,forder_id,fcreateor,number
	   ]]>
	   </sql>
	
    <insert id="insert"  useGeneratedKeys="true" keyProperty="fid">
    <![CDATA[
        INSERT INTO cl_abnormity (
         fid ,fcreat_time ,ftakeproblem, fcarproblem,frecproblem,fremark,forder_id,fcreateor,number 
        )VALUES(
        	#{fid, jdbcType=INTEGER} ,
        	#{fcreatTime, jdbcType=TIMESTAMP} ,
        	#{ftakeproblem, jdbcType=INTEGER} ,
        	#{fcarproblem, jdbcType=INTEGER} ,
        	#{frecproblem, jdbcType=INTEGER} ,
        	#{fremark, jdbcType=VARCHAR} ,
        	#{forderId, jdbcType=INTEGER} ,
        	#{fcreateor, jdbcType=INTEGER},
        	#{number, jdbcType=VARCHAR}
        	 
        	
        )
    ]]>
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE cl_abnormity SET
        	forder_id =#{forderId, jdbcType=INTEGER} 
        WHERE 
	        fid = #{id} 
    ]]>
    </update>

    <update id="updateUpId" >
    <![CDATA[
        UPDATE cl_abnormity SET
        	fupload_id =#{fuploadId, jdbcType=INTEGER} 
        WHERE 
	        fid = #{id} 
    ]]>
    </update>
    
    <update id="updateRemark" >
    <![CDATA[
        UPDATE cl_abnormity SET
        	fremark =#{fremark, jdbcType=VARCHAR} 
        WHERE 
	        fid = #{id} 
    ]]>
    </update>
    
    <delete id="delete">
    <![CDATA[
        DELETE FROM cl_abnormity WHERE  fid = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="CLAbnormity">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM cl_abnormity WHERE  fid = #{id} 
	    ]]>
    </select>
    
    <sql id="findWhere">
	    <where>
			<if test="@Ognl@isNotEmpty(searchKey)">
			    AND (
			        name       LIKE CONCAT('%',#{searchKey},'%') 
			    )
			</if>
			<if test="@Ognl@isNotEmpty(forderId)">
				AND forder_id = #{forderId}
			</if>
	    </where>
	</sql>
    
    <!-- 求满足条件的记录数 --> 
   	<select id="findPageCount" resultType="long">
        SELECT count(*) FROM cl_abnormity <include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="CLAbnormity">
    	SELECT <include refid="columns"/> FROM cl_abnormity 
		<include refid="findWhere"/>
		ORDER BY fcreat_time DESC;
<!-- 		<if test="@Ognl@isNotEmpty(sortColumns)"> -->
<!-- 			ORDER BY ${sortColumns} -->
<!-- 		</if> -->
    </select>

	<!-- 查询记录树 -->
	<select id="find" resultMap="CLAbnormity">
	    SELECT <include refid="columns"/> FROM cl_abnormity 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
    
    <!-- 根据投诉查询订单信息-->
	<select id="getOrderInfoByAbId" resultType="java.util.Map">
		SELECT co.number orderNumber,ur.vmi_user_name userName 
		FROM cl_abnormity ab JOIN cl_order co ON ab.forder_id = co.id
		JOIN cl_user_role ur ON ur.id = ab.fcreateor
		WHERE ab.fid = #{fid} 
    </select>
    
    <!-- 查询十五分钟内是否有新投诉-->
	<select id="haveNewAbnormal" resultType="int">
	    SELECT COUNT(1) FROM cl_abnormity WHERE TIMESTAMPDIFF(SECOND,fcreat_time,NOW()) &lt;= 900
    </select>    
</mapper>

