<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CL_CarRanking">

    <resultMap id="CLCarRankingMap" type="com.pc.model.CL_CarRanking">
        <result property="fid" column="fid"/>
        <result property="fname" column="fname"/>
        <result property="fnumber" column="fnumber"/>
        <result property="fbalance" column="fbalance"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[fid ,fname ,fnumber,fbalance ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO cl_car_ranking (
        	fid ,fname ,fnumber,fbalance 
        )VALUES(
        	#{fid, jdbcType=INTEGER} ,
        	#{fname, jdbcType=VARCHAR} ,
        	#{fnumber, jdbcType=VARCHAR} ,
        	#{fbalance, jdbcType=DECIMAL} 
        )
    ]]>
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE cl_car_ranking SET
	        fname = #{fname, jdbcType=VARCHAR} ,
	        fnumber = #{fnumber, jdbcType=VARCHAR} ,
        	fbalance = #{fbalance, jdbcType=DECIMAL} 
        WHERE 
	        fid = #{fid,jdbcType=INTEGER} 
    ]]>
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM cl_car_ranking WHERE  id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="CLCarRankingMap">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM cl_car_ranking WHERE  id = #{id} 
	    ]]>
    </select>
    
       <select id="getAll" resultMap="CLCarRankingMap">
	    SELECT <include refid="columns"/>
	    <![CDATA[
	        FROM cl_car_ranking  
	    ]]>
    </select>
    <sql id="findWhere">
	    <where>
		   	<if test="@Ognl@isNotEmpty(id)">
			    AND id = #{id}
			</if>
            <if test="@Ognl@isNotEmpty(name)">
                AND name = #{name}
            </if>
			<if test="@Ognl@isNotEmpty(searchKey)">
			    AND (
			        name       LIKE CONCAT('%',#{searchKey},'%') 
			    )
			</if>
	    </where>
	</sql>
	
    
    <!-- 求满足条件的记录数 --> 
   	<select id="findPageCount" resultType="long">
        SELECT count(*) FROM cl_car_ranking <include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="CLCarRankingMap">
    	SELECT <include refid="columns"/> FROM cl_car_ranking 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	<!-- 查询记录树 -->
	<select id="find" resultMap="CLCarRankingMap">
	    SELECT <include refid="columns"/> FROM cl_car_ranking 
		<include refid="findWhere"/>
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>
</mapper>

